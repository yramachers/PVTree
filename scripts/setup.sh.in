#!/bin/bash

# Script to setup the environment for running the produced executables.

# Geant 4
source @Geant4_INSTALL_PREFIX@/bin/geant4.sh

# ROOT
source @ROOT_INSTALL_PREFIX@/bin/thisroot.sh

# Internal libraries
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:@CMAKE_INSTALL_PREFIX@/lib

# LibConfig++
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:@LIBCONFIG_INSTALL_PREFIX@/lib

# ecCodes
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:@ECCODES_INSTALL_PREFIX@/lib

# Also give the path of the share directory
export PVTREE_SHARE_PATH=@CMAKE_INSTALL_PREFIX@/share

# Also give the path of the climate data directory
export PVTREE_CLIMATE_DATA_PATH=@CLIMATE_DATA_PATH@

# Add the binary directory to the path
export PATH=${PATH}:@CMAKE_INSTALL_PREFIX@/bin